@model IEnumerable<TrainersDTO>

@{
    ViewData["Title"] = "All Trainers";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary-color mb-0">All Trainers</h2>

        <a asp-controller="Trainer" asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-sm">
            <i class="bi bi-plus-circle"></i> Add Trainer
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var trainer in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100">
                        <div class="card-body text-center p-4">
                            <img src="~/images/User.jpg"
                                 alt="@trainer.Name"
                                 class="rounded-circle border shadow-sm mb-3"
                                 style="width: 120px; height: 120px; object-fit: cover;" />

                            <h5 class="fw-bold text-primary-color">@trainer.Name</h5>
                            <p class="text-muted mb-1">@trainer.Email</p>
                            <p class="fw-medium text-secondary mb-3">@trainer.Specialities</p>

                            <div class="d-flex justify-content-center gap-2">
                                <a asp-controller="Trainer"
                                   asp-action="TrainerDetails"
                                   asp-route-id="@trainer.Id"
                                   class="btn btn-outline-primary btn-sm rounded-pill px-3">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a asp-controller="Trainer"
                                   asp-action="TrainerEdit"
                                   asp-route-id="@trainer.Id"
                                   class="btn btn-outline-warning btn-sm rounded-pill px-3">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form method="post" asp-controller="Trainer" asp-action="Delete" asp-route-id="@trainer.Id" onsubmit="return confirm('Are you sure you want to delete this trainer?');">
                                    <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-4 rounded-pill">
            No trainers found.
        </div>
    }
</div>