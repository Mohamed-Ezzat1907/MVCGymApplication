@model IEnumerable<MembersDTO>

@{
    ViewData["Title"] = "Members";
}

<div class="container py-5">

    <!-- ✅ Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div id="Alert" class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <div id="Alert" class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- ✅ Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary-color">Members List</h2>
        <a asp-controller="Member" asp-action="Create" class="btn btn-fill fw-semibold rounded-pill px-4 py-2 shadow-sm">
            + Add Member
        </a>
    </div>

    <!-- ✅ Table -->
    @if (Model != null && Model.Any())
    {
        <!-- ⚠️ خلى الجدول يسمح بظهور القايمة -->
        <div class="table-responsive" style="overflow: visible !important;">
            <table class="table align-middle table-hover shadow-sm" style="position: relative; z-index: 1;">
                <thead class="table-light border-bottom">
                    <tr class="text-secondary fw-semibold">
                        <th scope="col">Photo</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Phone</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var member in Model)
                    {
                        <tr class="bg-white">
                            <td>
                                <img src="~/images/@(string.IsNullOrEmpty(member.Photo) ? "User.jpg" : member.Photo)"
                                     alt="@member.Name"
                                     class="rounded-circle border"
                                     style="width: 45px; height: 45px; object-fit: cover;" />
                            </td>
                            <td class="fw-medium">@member.Name</td>
                            <td>@member.Email</td>
                            <td>@member.Gender</td>
                            <td>@member.Phone</td>

                            <!-- ✅ Action Dropdown -->
                            <td class="text-center" style="position: relative; z-index: 100;">
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-light border shadow-sm rounded-circle"
                                            type="button"
                                            id="dropdownMenuButton-@member.Id"
                                            data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0 show-on-top"
                                        aria-labelledby="dropdownMenuButton-@member.Id"
                                        style="z-index: 1050; position: absolute;">
                                        <li>
                                            <a asp-controller="Member" asp-action="MemberDetails" asp-route-id="@member.Id"
                                               class="dropdown-item d-flex align-items-center gap-2">
                                                <i class="bi bi-person-lines-fill text-primary"></i>
                                                <span>View Member</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-controller="Member" asp-action="HealthRecordDetails" asp-route-id="@member.Id"
                                               class="dropdown-item d-flex align-items-center gap-2">
                                                <i class="bi bi-heart-pulse text-danger"></i>
                                                <span>View Health Record</span>
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider" /></li>
                                        <li>
                                            <a asp-controller="Member" asp-action="MemberEdit" asp-route-id="@member.Id"
                                               class="dropdown-item d-flex align-items-center gap-2">
                                                <i class="bi bi-pencil-square text-warning"></i>
                                                <span>Edit</span>
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider" /></li>
                                        <li>
                                            <button type="button"
                                                    class="dropdown-item d-flex align-items-center gap-2 text-danger"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#DeleteModal-@member.Id">
                                                <i class="bi bi-trash3"></i>
                                                <span>Delete</span>
                                            </button>
                                        </li>
                                    </ul>
                                </div>

                                <!-- ✅ Delete Modal -->
                                <div class="modal fade" id="DeleteModal-@member.Id" tabindex="-1" aria-labelledby="DeleteModalLabel-@member.Id" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content border-0 shadow-lg rounded-3">
                                            <div class="modal-header border-0">
                                                <h5 class="modal-title fw-semibold" id="DeleteModalLabel-@member.Id">
                                                    Delete Member
                                                </h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body text-center">
                                                <i class="bi bi-exclamation-triangle text-danger fs-1 mb-3"></i>
                                                <p class="mb-2 fs-5">Are you sure you want to delete <strong>@member.Name</strong>?</p>
                                            </div>
                                            <div class="modal-footer border-0 justify-content-center">
                                                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Cancel</button>
                                                <form asp-action="Delete" asp-controller="Member" asp-route-id="@member.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-danger px-4">Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <!-- ✅ No Members Section -->
        <div class="text-center py-5">
            <i class="bi bi-person-workspace display-1 text-muted"></i>
            <h4 class="mt-3 text-muted">No Members Available</h4>
            <p class="text-muted">Add your first member to get started.</p>
            <a asp-controller="Member" asp-action="Create" class="btn btn-fill rounded-pill px-4 py-2 mt-3">+ Add Member</a>
        </div>
    }
</div>

@section Scripts {
    <script>
        // ✅ Auto-hide alerts after 3 seconds
        const alert = document.getElementById("Alert");
        if (alert) {
            setTimeout(() => alert.classList.remove("show"), 3000);
        }
    </script>
}